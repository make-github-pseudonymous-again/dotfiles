# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	id main
	position bottom
	status_command ~/.bin/system.status

	wheel_up_cmd nop
	wheel_down_cmd nop
	#bindsym button4 nop
	#bindsym button5 nop

	tray_output none

	colors {
		background #1c1c1c
		statusline #dddddd

		separator #666666

		focused_workspace  #4c7899 #285577 #ffffff
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #2f343a #CF4647 #ffffff
		#binding_mode       #2f343a #CF4647 #ffffff
	}
}

bar {
	id extra
	position top
	status_command ~/.bin/system.status.extra

	wheel_up_cmd nop
	wheel_down_cmd nop
	#bindsym button4 nop
	#bindsym button5 nop

	mode dock

	workspace_buttons no
	binding_mode_indicator no

	colors {
		background #1c1c1c
		statusline #dddddd

		separator #666666

		focused_workspace  #4c7899 #285577 #ffffff
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #2f343a #CF4647 #ffffff
		#binding_mode       #2f343a #CF4647 #ffffff
	}
}

