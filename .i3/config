# Change the workspace output
bindsym $mod+plus exec i3.workspace.swap
bindsym $mod+semicolon move workspace to output right
bindsym $mod+colon move workspace to output left
# ... and for US keyboard
bindsym $mod+question exec i3.workspace.swap
bindsym $mod+comma move workspace to output right
bindsym $mod+period move workspace to output left

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show
# Automatically move papercut balance window to the scratchpad.
for_window [class="biz-papercut-pcng-client-uit-UserClient" title="^Balance for.*"] move scratchpad


