#!/usr/bin/env sh

if [ $(id -u) != "0" ]
then
echo 'must be run as root'
exit 1
fi

x="$1"

pip_installed="$(pip list --format freeze | cut -d'=' -f1)"

if [ "$x" = u ] ; then

  function _ ( ) {
    package="$(<<< $1 cut -d= -f1)"
    if { <<< "$pip_installed" grep "^$package\$" 1>/dev/null 2>&1 ; } ; then
      echo "  > updating ~ $1"
      pip install --upgrade "$package" 1>/dev/null
    fi
  }

elif [ "$x" = i ] ; then

  function _ ( ) {
    package="$(<<< $1 cut -d= -f1)"
    if ! { <<< "$pip_installed" grep "^$package\$" 1>/dev/null 2>&1 ; } ; then
      echo "  > installing ~ $1"
      pip install "$package" 1>/dev/null
    fi
  }

else

  function _ ( ) {
    package="$(<<< $1 cut -d= -f1)"
    if { <<< "$pip_installed" grep "^$package\$" 1>/dev/null 2>&1 ; } ; then
      echo "  > updating ~ $1"
      pip install --upgrade "$package" 1>/dev/null
    else
      echo "  > installing ~ $1"
      pip install "$package" 1>/dev/null
    fi
  }

fi

_ arrow==0.11.0 # for compat with ics
_ ics==0.5.0
