#!/usr/bin/env bash

if [ "$(id -u)" != 0 ] ; then
  echo 'must be run as root'
  exit 1
fi

DOTFILES="$(dirname "$(dirname "${BASH_SOURCE[0]}")")";

packages="$(sed -e 's/\s*#.*$//g' -e '/^$/d' "$DOTFILES"/bootstrap/packages/base)"

echo "  > installing ~ $(<<< $packages tr '\n' ' ')"
printf '%s\n' "$packages" |
1>/dev/null 2>&1 pacman -S --needed --noconfirm -

exit 0
