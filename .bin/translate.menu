#!/usr/bin/env sh

lang="en\nfr\n"


fro=$(printf 'auto\n%b' "$lang" | dmenu_center --rest -p ' from' -sb '#2D615C')

if [ "$fro" = '' ] ; then
	exit 1
fi


to=$(printf '%b' "$lang" | dmenu_center --rest -p ' to' -sb '#2D615C')

if [ "$to" = '' ] ; then
	exit 2
fi


q=$(ui.dialog.input -p ' query' -sb '#2D615C')

if [ "$q" = '' ] ; then
	exit 3
fi

query=$(printf '%s' "$q" | urlencode)

wb --new-window "https://translate.google.com/#$fro/$to/$query"
