#!/usr/bin/env sh

cache="${HOME}/.cache/iwctl/last"
profile="$(wifi.profiles.running)"

if [ "$profile" != '' ] ; then
	wifi.profile.stop "$profile"
	mkdir -p "$(dirname "$cache")"
	echo "$profile" > "$cache"
elif is.wifi.auto.running ; then
	wifi.auto.stop
	mkdir -p "$(dirname "$cache")"
	echo "auto" > "$cache"
else
	rm -f "$cache"
fi
