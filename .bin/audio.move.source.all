#!/usr/bin/env sh

source="$(audio.sources | \
dmenu_center --rest -i -t -p 'source' -sb '#F24130' -l 10 | \
cut -d' ' -f1)"

if [ "$source" = '' ]; then
	exit 2
fi

pacmd set-default-source "$source"

outputs="$(audio.outputs.index)"

if [ "$outputs" != '' ]; then
	echo "$outputs" | xargs -I{} pacmd move-source-output "{}" "$source"
fi
