#!/usr/bin/env sh

input="$(audio.inputs | \
dmenu_center --rest -i -t -p 'input' -sb '#F24130' -l 10 | \
cut -d' ' -f1)"

if [ "$input" = '' ]; then
	exit 1
fi

sink="$(audio.sinks | \
dmenu_center --rest -i -t -p 'sink' -sb '#F24130' -l 10 | \
cut -d' ' -f1)"

if [ "$sink" = '' ]; then
	exit 2
fi

pacmd move-sink-input "$input" "$sink"
