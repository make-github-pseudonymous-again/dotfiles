# shutdown actions

# set $mode_shutdown System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+S) shutdown

mode "shutdown" {

        #-- bindsym l exec system.lock; mode "default"
        bindcode 46 exec system.lock; mode "default"
        #-- bindsym Shift+L exec system.suspend; mode "default"
        bindcode Shift+46 exec system.suspend; mode "default"
        #-- bindsym Shift+H exec system.hibernate; mode "default"
        bindcode Shift+43 exec system.hibernate; mode "default"
        #-- bindsym Shift+E exec system.exit; mode "default"
        bindcode Shift+26 exec system.exit; mode "default"
        #-- bindsym Shift+R exec system.restart; mode "default"
        bindcode Shift+27 exec system.restart; mode "default"
        #-- bindsym Shift+S exec system.stop; mode "default"
        bindcode Shift+39 exec system.stop; mode "default"

        # back to normal: Enter or Escape
        #-- bindsym Return mode "default"
        bindcode 36 mode "default"
        #-- bindsym Escape mode "default"
        bindcode 66 mode "default"
}

