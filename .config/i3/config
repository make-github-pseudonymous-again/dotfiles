# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left

        #-- bindsym h resize shrink left 10 px or 10 ppt
        bindcode 43 resize shrink left 10 px or 10 ppt
        #-- bindsym Shift+H resize grow   left 10 px or 10 ppt
        bindcode Shift+43 resize grow   left 10 px or 10 ppt

        #-- bindsym j resize shrink down 10 px or 10 ppt
        bindcode 44 resize shrink down 10 px or 10 ppt
        #-- bindsym Shift+J resize grow   down 10 px or 10 ppt
        bindcode Shift+44 resize grow   down 10 px or 10 ppt

        #-- bindsym k resize shrink up 10 px or 10 ppt
        bindcode 45 resize shrink up 10 px or 10 ppt
        #-- bindsym Shift+K resize grow   up 10 px or 10 ppt
        bindcode Shift+45 resize grow   up 10 px or 10 ppt

        #-- bindsym l resize shrink right 10 px or 10 ppt
        bindcode 46 resize shrink right 10 px or 10 ppt
        #-- bindsym Shift+L resize grow   right 10 px or 10 ppt
        bindcode Shift+46 resize grow   right 10 px or 10 ppt

        # same bindings, but for the arrow keys
        #-- bindsym Left resize shrink left 10 px or 10 ppt
        bindcode 113 resize shrink left 10 px or 10 ppt
        #-- bindsym Shift+Left resize grow   left 10 px or 10 ppt
        bindcode Shift+113 resize grow   left 10 px or 10 ppt

        #-- bindsym Down resize shrink down 10 px or 10 ppt
        bindcode 116 resize shrink down 10 px or 10 ppt
        #-- bindsym Shift+Down resize grow   down 10 px or 10 ppt
        bindcode Shift+116 resize grow   down 10 px or 10 ppt

        #-- bindsym Up resize shrink up 10 px or 10 ppt
        bindcode 111 resize shrink up 10 px or 10 ppt
        #-- bindsym Shift+Up resize grow   up 10 px or 10 ppt
        bindcode Shift+111 resize grow   up 10 px or 10 ppt

        #-- bindsym Right resize shrink right 10 px or 10 ppt
        bindcode 114 resize shrink right 10 px or 10 ppt
        #-- bindsym Shift+Right resize grow   right 10 px or 10 ppt
        bindcode Shift+114 resize grow   right 10 px or 10 ppt

        # back to normal: Enter or Escape
        #-- bindsym Return mode "default"
        bindcode 36 mode "default"
        #-- bindsym Escape mode "default"
        bindcode 66 mode "default"
}

